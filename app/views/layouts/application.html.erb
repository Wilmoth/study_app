<!DOCTYPE html>
<html>

  <head>
    <title>StudyApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header> 
      <nav class="navbar navbar-expand-lg navbar-dark bg-primary" >
        <div class="collapse navbar-collapse">
        <ul class="navbar-nav">
          <li class="nav-item"><%= link_to 'Home  ', home_index_path %></li>
          <% if user_signed_in? %>
            <li class="nav-item"><%= link_to 'Phonics  ', study_phonics_path %></li>
            <li class="nav-item"><%= link_to 'Words  ', study_words_path %></li>
            <li class="nav-item"><%= link_to 'Listening  ', study_listenings_path %></li>
            <li class="nav-item"><%= link_to 'プロフィール変更　', edit_user_registration_path %></li>
            <li class="nav-item"><%= link_to 'サインアウト　', destroy_user_session_path, method: :delete %></li>
          <% else %>
            <li class="nav-item"><%= link_to 'ユーザ登録　', new_user_registration_path %></li>
            <li class="nav-item"><%= link_to 'サインイン　', new_user_session_path %></li>
          <% end %>
        </ul>
        </div>
      </nav> 
    </header>
    <div class="container-fluid">
  <p class="notice"><%= notice %></p> 
  <p class="alert"><%= alert %></p>
  
  <%= yield %>
  </div>
  </body>
</html>