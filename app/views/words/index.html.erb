<p id="notice"><%= notice %></p>

<h1>Words</h1>

<table>
  <thead>
    <tr>
      <th>Level</th>
      <th>Question</th>
      <th>Cand1</th>
      <th>Cand2</th>
      <th>Cand3</th>
      <th>Answer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @words.each do |word| %>
      <tr>
        <td><%= word.level %></td>
        <td><%= word.question %></td>
        <td><%= word.cand1 %></td>
        <td><%= word.cand2 %></td>
        <td><%= word.cand3 %></td>
        <td><%= word.answer %></td>
        <td><%= link_to 'Show', word %></td>
        <td><%= link_to 'Edit', edit_word_path(word) %></td>
        <td><%= link_to 'Destroy', word, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

