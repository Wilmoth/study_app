<p id="notice"><%= notice %></p>

<h1>Histories</h1>

<table>
  <thead>
    <tr>
      <th>User name</th>
      <th>Study date</th>
      <th>Section</th>
      <th>Score</th>
      <th>Num questions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @histories.each do |history| %>
      <tr>
        <td><%= history.user_name %></td>
        <td><%= history.study_date %></td>
        <td><%= history.section %></td>
        <td><%= history.score %></td>
        <td><%= history.num_questions %></td>
        <td><%= link_to 'Show', history %></td>
        <td><%= link_to 'Edit', edit_history_path(history) %></td>
        <td><%= link_to 'Destroy', history, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

